<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    tools:context=".Orden.AgregarArticuloOrden">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_notes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Agregar Articulo"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/aao_imagen_salvar"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_salvar"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Selecciona el articulo"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/aao_Spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Cantidad"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/aao_cantidad"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Seleccione la cantidad"
        android:background="@drawable/background_edit_text"
        android:maxLines="1"
        android:inputType="number"
        android:textSize="16sp"
        android:maxLength="25"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <!--
    limite
    -->

</LinearLayout>